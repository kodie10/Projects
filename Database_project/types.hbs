{{!-- Create a table --}}
<table id="Types-table" class="main-table">

    {{!-- Header section --}}
    <thead>
        <th>Type ID</th>
        <th>Name</th>
        <th>Super Effective</th>
        <th>Weakness</th>
        <th>No Effect</th>
        <th>Delete</th>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the type_id, name, supereffective, weakness, and no effect in order --}}
        {{#each data}}
        <tr data-value={{this.type_id}}>
            <td>{{this.type_id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.super_effective}}</td>
            <td>{{this.weakness}}</td>
            <td>{{this.no_effect}}</td>
            <td><button onclick="deleteType({{this.type_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{!-- script to hide/show the update form --}}
<script type="text/javascript">
        function show(typeID) {
            document.getElementById("update-type-form").style.display= "block";
        }
</script>

{{!-- form to add a new type --}}
<form id="add-types-form" method="POST" action="/add-types-form">
<legend>To add a new type, please enter the information below and click `Submit`!</legend>
<p> * = input required </p>
<fieldset>
    <label for="input-type-name">Name:* </label>
    <input type="text" name="input-type-name" id="input-type-name" required>
    
    <label for="input-super_effective">Super Effective:* </label>
    <input type="text" name="input-super_effective" id="input-super_effective" required>

    <label for="input-weakness">Weakness:* </label>
    <input type="text" name="input-weakness" id="input-weakness" required>

    <label for="input-no_effect">No Effect: </label>
    <input type="text" name="input-no_effect" id="input-no_effect">
</fieldset>
    <input class="button-center" type="submit" value='Submit'>
</form>

{{!-- form to update a type --}}
<p> To Update a Type click 'Update' </p>
<td><button class="button-center" onclick="show({{this.type_id}})">Update</button></td>
<form id="update-type-form" method="POST" action="/update-type-form" style="display: none">
<legend>Updating A Pokemons Type</legend>
<p>Fill out the form to update</p>
<p> * = input required </p>
<fieldset>
        <label>Type*</label><select name="input-type-update" id="input-type-update" required>
        {{#each type}}
        <option value="{{this.type_id}}"> {{this.type}}</option>
        {{/each}}
        </select>

        <label for="input-super_effective-update">Super Effective:* </label>
        <input type="text" name="input-super_effective-update" id="input-super_effective-update" required>

        <label for="input-weakness-update">Weakness:* </label>
        <input type="text" name="input-weakness-update" id="input-weakness-update" required>

        <label for="input-no_effect-update">No Effect: </label>
        <input type="text" name="input-no_effect-update" id="input-no_effect-update">
    </fieldset>
    <input class="button-center" type="submit" value="Submit">
</form>

