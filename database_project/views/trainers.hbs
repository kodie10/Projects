{{!-- Create a table --}}
<table id="Trainers-table" class="main-table">

    {{!-- Header section --}}
    <thead>
        <th>Trainer ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Hometown</th>
        <th>Delete</th>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the trainer_id, fname, lname, hometown, in order --}}
        {{#each data}}
        <tr data-value={{this.trainer_id}}>
            <td>{{this.trainer_id}}</td>
            <td>{{this.f_name}}</td>
            <td>{{this.l_name}}</td>
            <td>{{this.hometown}}</td>
            <td><button onclick="deleteTrainer({{this.trainer_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>


{{!-- Form to add a record to the table  --}}

<form id="add-trainers-form" method="POST" action="/add-trainers-form">
<legend>To register a new trainer, please enter their information below and click `Submit`!</legend>
<p> * = input required </p>
<fieldset>
    <label for="input-f_name">First Name:* </label>
    <input type="text" name="input-f_name" id="input-f_name" required>
    
    <label for="input-l_name">Last Name:* </label>
    <input type="text" name="input-l_name" id="input-l_name" required>

    <label for="input-hometown">Hometown:* </label>
    <input type="text" name="input-hometown" id="input-hometown" required>
</fieldset>
    <input class="button-center" type="submit" value='Submit'>
</form>

{{!-- form to search trainer by l_name --}}
<form id="search-trainers-html" method='GET' action='/trainers.hbs'>
<legend>Search for a specific Trainer by Last Name</legend>
<fieldset>
    <label for="input-l_name">Search by Last Name: </label>
    <input type="text" name="l_name" id="input-l_name-html-search">
</fieldset>
<div class="center-button">
    <input  type="submit" value='Submit'>
    <input  type="reset" id="reset" value="Cancel">
    <input  type="Submit" id="cancel" value="Reset">
</div>
</form>

